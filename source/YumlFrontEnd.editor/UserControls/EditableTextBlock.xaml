<UserControl x:Class="YumlFrontEnd.editor.EditableTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:YumlFrontEnd.editor"
             mc:Ignorable="d"
             xmlns:caliburn="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
             d:DesignHeight="300" d:DesignWidth="300">
  <UserControl.Resources>
    <Style BasedOn="{StaticResource TextBlock-Sketch}"
           TargetType="TextBlock" />
    <Style BasedOn="{StaticResource TextBox-Sketch}"
            TargetType="TextBox" />
  </UserControl.Resources>
  <Grid>
    <TextBlock Name="Name"
            Grid.Column="1"
            caliburn:Message.Attach="[Event MouseLeftButtonDown] = [Action StartEditing]"/>
    <TextBox Text="{Binding Name}"
             Grid.Column="1"
             Visibility="{Binding IsEditable,Converter={StaticResource _booleanToVisibility}}"
             caliburn:Message.Attach="[Event PreviewKeyDown] = [Action StopEditing($eventArgs)]"/>
  </Grid>
</UserControl>
