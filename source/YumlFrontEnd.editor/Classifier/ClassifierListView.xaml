<UserControl x:Class="YumlFrontEnd.editor.ClassifierListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:YumlFrontEnd.editor"
             xmlns:caliburn="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
             mc:Ignorable="d">
  <UserControl.Resources>
    <Style BasedOn="{StaticResource ListBox-Sketch}" TargetType="ListBox"/>
  </UserControl.Resources>
  <DockPanel>
  <StackPanel 
    Margin="5,0"
    HorizontalAlignment="Right"
    DockPanel.Dock="Top">
    <local:ActionButton 
      x:Name="New"
      Style="{StaticResource NewButtonStyle}"/>
  </StackPanel>
  <ItemsControl Name="Items"
                DockPanel.Dock="Bottom">
    <ItemsControl.ItemTemplate>
      <DataTemplate>
        <ContentControl caliburn:View.Model="{Binding}"/>
      </DataTemplate>
    </ItemsControl.ItemTemplate>
  </ItemsControl>  
  </DockPanel>
</UserControl>
