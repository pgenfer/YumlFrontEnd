      <ColumnDefinition Width="100"/>
      <ColumnDefinition Width="100"/>
    </Grid.ColumnDefinitions>
    <!-- name is not used at the moment 
    <local:EditableTextBlock
      Watermark="name of assocation"
      Grid.Column="0"
      cal:Bind.Model="{Binding}"
